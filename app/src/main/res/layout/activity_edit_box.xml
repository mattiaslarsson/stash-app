<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".EditBoxActivity">

  <Button
    style="@style/Widget.AppCompat.Button.Colored"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/sortByDescriptionButton"
    android:text="Sort By Desc"
    />

  <Button
    style="@style/Widget.AppCompat.Button.Colored"

    app:layout_constraintLeft_toRightOf="@id/sortByDescriptionButton"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintRight_toLeftOf="@id/addItemButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/sortByExpirationButton"
    android:text="Sort By Exp"
    />

  <Button
    style="@style/Widget.AppCompat.Button.Colored"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toRightOf="@id/sortByExpirationButton"
    app:layout_constraintRight_toRightOf="parent"
    android:id="@+id/addItemButton"
    android:text="Add Item"
    />


  <ListView
    app:layout_constraintTop_toBottomOf="@id/sortByDescriptionButton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/boxContentList"/>

</android.support.constraint.ConstraintLayout>